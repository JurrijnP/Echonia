&gm?setdata {params}={init}
{req:Game Master}
#js >>
use MainData;
import "https://raw.githubusercontent.com/JurrijnP/Echonia/master/Scripts/Strings.js";
import "https://raw.githubusercontent.com/JurrijnP/Echonia/master/Scripts/DataObjects.js";
var Games = ["Hangman", "Yahtzee", "Battleships", "Slotmachine", "Horse Race", "Poker"];
var Game = Params.replace(/\s([0-5])\s(.+)$/g, "");
var Variable = Params.replace(/(^([^0-5]+)\s)|(\s([^0-5]+)$)/g, "");
var Value = Params.replace(/(.+?)\s([0-5])\s/g, "");
if (Games.indexOf(Game) > -1) {
	MainData[Game] = DataObjects(Game, Variable, Value);
	MainData["EmbedUpdate"] = Game;
	resp = "*" + Variable + "* has succesfully updated for *" + Game + "*.\n{ars:gameEmbeds}";
} else {
	resp = "*" + Game + "* is not a Game.\nType `gm?data` to view options.";
}
